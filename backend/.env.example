# =============================================
# AI LEGAL ADVISOR - ENVIRONMENT CONFIGURATION
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ---------------------------------------------
# APPLICATION
# ---------------------------------------------
APP_NAME="AI Legal Advisor"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true

# ---------------------------------------------
# DATABASE (PostgreSQL)
# ---------------------------------------------
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/injustice_db"

# ---------------------------------------------
# AUTHENTICATION & SECURITY
# ---------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------------------------------------------
# AI & RAG CONFIGURATION
# ---------------------------------------------
GOOGLE_API_KEY="your-google-api-key"
OPENAI_MODEL="gemini-1.5-flash"
EMBEDDING_MODEL="models/embedding-001"

# Vector Database (ChromaDB local path)
CHROMA_PERSIST_DIR="./data/chroma_db"

# RAG Settings
RAG_TOP_K=5
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=75

# ---------------------------------------------
# RATE LIMITING
# ---------------------------------------------
RATE_LIMIT_PER_MINUTE=30

# ---------------------------------------------
# CORS (Comma-separated origins)
# ---------------------------------------------
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8081"

# ---------------------------------------------
# LEGAL SAFETY
# ---------------------------------------------
JURISDICTION="Nigeria"
ESCALATION_EMAIL="legal-aid@example.com"
